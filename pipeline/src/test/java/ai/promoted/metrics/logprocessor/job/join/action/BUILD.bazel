    test_package = "ai.promoted.metrics.logprocessor.job.join.action",
    use_testrunner = False,
    deps = [
        "//pipeline/src/main/java/ai/promoted/metrics/logprocessor/job/join/action",
        "//pipeline/src/main/java/ai/promoted/metrics/logprocessor/job/join/common",
